<style>
  /* Mobile-first styling */
  .social-footer {
    position: fixed;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 9999;
    pointer-events: none;
  }

  .social-links a {
    pointer-events: auto;
  }

  .social-links {
    display: flex;
    gap: var(--space-3);
    align-items: center;
    justify-content: center;
  }

  .social-links a {
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .social-icon {
    width: 40px;
    height: 40px;
    transition: transform 0.3s ease;
  }

  .social-icon-large {
    width: 40px;
    height: auto;
  }

  .social-links a:hover .social-icon {
    transform: translateY(-4px) scale(1.1);
    filter: drop-shadow(0 10px 20px rgba(62, 159, 212, 0.3));
  }

  /* Desktop styles (768px and up) */
  @media (min-width: 768px) {
    .social-footer {
      bottom: 120px;
      right: 180px;
      left: auto;
      transform: none;
      z-index: 9999;
    }

    .social-links {
      gap: var(--space-4);
    }

    .social-icon {
      width: 34px;
      height: 34px;
    }

    .social-icon-large {
      width: 50px;
      height: auto;
    }
  }

  /* Hide on print */
  @media print {
    .social-footer {
      display: none;
    }
  }
</style>
