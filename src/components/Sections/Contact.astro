---
/**
 * Contact Section
 *
 * Display contact information and links
 */

import { getPersonalInfo } from '../../utils/data-loader';

const personal = getPersonalInfo();
---

<section class="contact-section" id="contact">
  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Get in Touch</h2>
      <p class="section-subtitle">
        Let's discuss how I can help with your project
      </p>
    </div>

    <div class="contact-grid">
      <a href={`mailto:${personal.email}`} class="contact-card">
        <div class="card-icon email">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h3 class="card-title">Email</h3>
        <p class="card-detail">{personal.email}</p>
      </a>

      <a href={`tel:${personal.phone}`} class="contact-card">
        <div class="card-icon phone">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
        <h3 class="card-title">Phone</h3>
        <p class="card-detail">{personal.phone}</p>
      </a>

      <a href={`https://${personal.linkedin}`} target="_blank" rel="noopener noreferrer" class="contact-card">
        <div class="card-icon linkedin">
          <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </div>
        <h3 class="card-title">LinkedIn</h3>
        <p class="card-detail">Connect with me</p>
      </a>

      <div class="contact-card location">
        <div class="card-icon">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <h3 class="card-title">Location</h3>
        <p class="card-detail">{personal.location}</p>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: var(--space-16) 0;
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(20px);
    border-radius: var(--radius-lg);
    margin: var(--space-8) auto var(--space-16);
    max-width: 1200px;
    box-shadow: var(--shadow-lg);
  }

  @media (max-width: 767px) {
    .contact-section {
      margin: var(--space-4) var(--space-4) var(--space-8);
      padding: var(--space-8) 0;
    }
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .section-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-primary);
    margin-bottom: var(--space-3);
  }

  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-gray-600);
  }

  .contact-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-6);
  }

  @media (max-width: 767px) {
    .contact-grid {
      grid-template-columns: 1fr;
    }
  }

  .contact-card {
    background: var(--color-white);
    padding: var(--space-8);
    border-radius: var(--radius-md);
    border: 2px solid var(--color-gray-200);
    text-align: center;
    transition: all var(--transition-base);
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .contact-card.location {
    cursor: default;
  }

  .contact-card:not(.location):hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-secondary);
  }

  .card-icon {
    width: 60px;
    height: 60px;
    margin: 0 auto var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-full);
    background: var(--color-gray-100);
    color: var(--color-primary);
    transition: all var(--transition-base);
  }

  .card-icon svg {
    width: 30px;
    height: 30px;
  }

  .contact-card:not(.location):hover .card-icon {
    background: var(--color-secondary);
    color: var(--color-white);
    transform: scale(1.1);
  }

  .card-icon.email {
    background: rgba(234, 88, 12, 0.1);
    color: #ea580c;
  }

  .card-icon.phone {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .card-icon.linkedin {
    background: rgba(14, 116, 178, 0.1);
    color: #0e74b2;
  }

  .card-title {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-gray-900);
    margin-bottom: var(--space-2);
  }

  .card-detail {
    font-size: var(--text-sm);
    color: var(--color-gray-600);
    margin-bottom: 0;
    word-break: break-word;
  }

  @media print {
    .contact-section {
      box-shadow: none;
      margin: var(--space-4) 0;
    }

    .contact-card:hover {
      transform: none;
    }
  }
</style>
